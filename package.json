{
  "name": "basic-kits",
  "private": true,
  "workspaces": [ "packages/*" ],
  "scripts": {
    "init": "yarn install && lerna bootstrap && npm run build",
    "build": "lerna run --stream --sort build:force",
    "build:prod": "npm run build && lerna publish",
    "clean": "lerna clean -y && rm -rf node_modules",
    "clean:init": "npm run clean && npm run init"
  },
  "devDependencies": {
    "lerna": "^3.20.2"
  }
}
